// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "base_keymap": "VSCode",
  "icon_theme": "Catppuccin Macchiato",
  "vim_mode": true,
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "experimental.theme_overrides": {
    "players": [
      {
        "cursor": "#ff9500ff",
        "background": "#ff9500ff"
      }
    ]
  },
  "buffer_font_family": "RobotoMono Nerd Font",
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_line_height": "standard",
  "theme": {
    "mode": "system",
    "light": "Gruvbox Light Hard",
    "dark": "Catppuccin Macchiato"
  },
  "format_on_save": "on",
  "formatter": ["auto", { "code_action": "source.organizeImports" }],
  "close_on_file_delete": true,
  "load_direnv": "shell_hook",
  "title_bar": {
    "show_branch_icon": true,
    "show_sign_in": false
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "toolbar": {
    "selections_menu": false
  },
  "scrollbar": {
    "show": "auto",
    "axes": {
      "horizontal": false,
      "vertical": true
    }
  },
  "command_aliases": {
    "W": "w",
    "Wq": "wq"
  },
  "file_finder": {
    "include_ignored": true
  },
  "project_panel": {
    "auto_reveal_entries": true
  },
  "collaboration_panel": {
    "button": false
  },
  "notification_panel": {
    "button": false
  },
  "inlay_hints": {
    "show_value_hints": false
  },
  "terminal": {
    "copy_on_select": true
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "button": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4.5"
    }
  },
  "edit_predictions": {
    "copilot": {
      "enterprise_uri": "https://dnb.ghe.com"
    }
  },
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "languages": {
    "YAML": {
      "tab_size": 2,
      "formatter": {
        "external": {
          "command": "yamlfmt",
          "arguments": ["-"]
        }
      }
    },
    "Markdown": {
      "tab_size": 4,
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--parser", "markdown", "--prose-wrap", "always"]
        }
      }
    },
    "Shell Script": { "tab_size": 2 }
  },
  "lsp": {
    "mpls": {
      "binary": {
        "path": "mpls",
        "arguments": ["--dark-mode", "--enable-emoji", "--enable-footnotes"]
      }
    },
    "gopls": {
      "initialization_options": {
        "gofumpt": true,
        "buildFlags": ["-tags=integration"]
      }
    }
  }
}
