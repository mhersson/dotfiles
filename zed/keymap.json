// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "VimControl && !menu",
    "bindings": {
      // Put key bindings here if you want them to work in normal & visual mode.
      "space space": "file_finder::Toggle",
      "space ,": "tab_switcher::ToggleAll",
      "shift-h": "pane::ActivatePreviousItem",
      "shift-l": "pane::ActivateNextItem",
      "space b k": ["pane::CloseActiveItem", { "close_pinned": false }],
      "space b o": ["pane::CloseOtherItems", { "close_pinned": false }],
      "space g g": [
        "task::Spawn",
        { "task_name": "lazygit", "reveal_target": "center" }
      ],
      "space p p": ["projects::OpenRecent", { "create_new_window": false }]
    }
  },
  {
    "context": "Workspace && VimControl",
    "bindings": {
      // "space space": "file_finder::Toggle",
      "space w h": "workspace::ActivatePaneLeft",
      "space w l": "workspace::ActivatePaneRight",
      "space w k": "workspace::ActivatePaneUp",
      "space w j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor && VimControl",
    "bindings": {
      // "j k": ["workspace::SendKeystrokes", "escape"]
      "space w v": "pane::SplitRight",
      "space w s": "pane::SplitDown",
      "space w h": "workspace::ActivatePaneLeft",
      "space w l": "workspace::ActivatePaneRight",
      "space w k": "workspace::ActivatePaneUp",
      "space w j": "workspace::ActivatePaneDown"
    }
  },
  {
    "context": "Editor && (showing_code_actions || showing_completions)",
    "bindings": {
      "tab": "editor::ContextMenuNext",
      "shift-tab": "editor::ContextMenuPrevious"
    }
  },
  {
    "context": "GitDiff > Editor && VimControl",
    "use_key_equivalents": true,
    "bindings": {
      "q": "pane::CloseActiveItem",
      "space": "git::ToggleStaged",
      "tab": "editor::ToggleFold",
      "shift-tab": "editor::FoldAll",
      "shift-x": "git::Restore",
      "x": ["git::RestoreFile", { "skip_prompt": false }],
      "shift-p u": "git::Push",
      "shift-p f u": "git::ForcePush"
    }
  },
  {
    "context": "EmptyPane || SharedScreen && VimControl",
    "bindings": {
      "space space": "file_finder::Toggle",
      "space p p": ["projects::OpenRecent", { "create_new_window": false }]
    }
  }
]
